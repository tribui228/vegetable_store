@model PagedList.Core.IPagedList<Web_market.Models.Page>
@using PagedList.Core.Mvc

@{ 
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"></h1>
    <p class="mb-4">
        Danh sách Pages : trang @CurrentPage
        </br>
        <a target="_blank"
           asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ Admin</a>.
        <span></span>
    </p>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <div class="d-md-flex">
                        

                        <div class="col lg-4 text-right">
                            <a class="btn btn-primary mb-3 ml-5 " asp-area="Admin" asp-controller="AdminPages" asp-action="Create">Tao pages</a>
                        </div>
                    </div>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên pages</th>
                           
                            <th>Trạng thái</th>
                         
                            <th>Quyền </th
                           
                    </thead>
                    
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    string url = $"/page/{item.Alias}";
                                    <tr>
                                        <td>@item.PageId</td>
                                         <td><a target="_blank" href="@url">@item.PageName</a></td>                                 

                                        @if (@item.Published )
                                        {
                                            <td><span class="badge badge-success">Public</span></td>

                                        }
                                        else
                                        {
                                            <td class="status"><span class="badge badge-danger">Non-public</span></td>
                                        }

                                    

                                        <td>
                                            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminPages" asp-action="Details" asp-route-id="@item.PageId">Xem</a>
                                            <a class="btn btn-secondary" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@item.PageId">Sửa</a>
                                            <a class="btn btn-danger" asp-area="Admin" asp-controller="AdminPages" asp-action="Delete" asp-route-id="@item.PageId">Xóa</a>

                                        </td>
                                    
                                    </tr>
                                }
                            }




                        </tbody>
                </table>

                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="fa-pager-container" list="@Model" asp-area="Admin" asp-action="Index" asp-controller="AdminPages"  />
                    </ul>
                </div>

            </div>
        </div>
    </div>

</div>