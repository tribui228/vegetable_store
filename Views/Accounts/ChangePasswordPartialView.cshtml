@model Web_market.ModelViews.ChangePasswordViewModel

<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="ChangePassword" method="post" class="myaccount-form">
        <div class="myaccount-form-inner">
            <div class="single-input single-input-half">
                <label>Mật khẩu cũ</label>
                <input asp-for="PasswordNow" type="password">
                <span asp-validation-for="PasswordNow" class="text-danger"></span>
            </div>
            <div class="single-input single-input-half">
                <label>Mật khẩu mới</label>
                <input asp-for="Password" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>Nhập lại mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                    <span>Lưu</span>
                </button>
            </div>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>